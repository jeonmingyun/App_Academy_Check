<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".act.MainAct">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/baseBgGray">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <!-- main frame-->
        <FrameLayout
            android:id="@+id/main_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar" />

        <ImageButton
            android:id="@+id/user_add_btn"
            android:layout_width="@dimen/add_btn_size"
            android:layout_height="@dimen/add_btn_size"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/base_side_spacer"
            android:layout_marginEnd="@dimen/base_side_spacer"
            android:background="@drawable/add_btn_bg"
            android:src="@drawable/add_btn" />

    </RelativeLayout>

    <include layout="@layout/side_navi" />

</androidx.drawerlayout.widget.DrawerLayout>